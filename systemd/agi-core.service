[Unit]
Description=AGI Core Service
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/agi-core
EnvironmentFile=%h/agi-core/.env
ExecStart=%h/agi-core/.venv/bin/python -m agi_core.app --config ${AGI_CORE_CONFIG:-%h/agi-core/config/default.yaml}
Restart=on-failure
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=default.target
